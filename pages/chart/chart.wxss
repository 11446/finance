/* pages/chart/chart.wxss */

.head {
    background-color: #EB4D45;
    line-height: 40px;
    text-align: center;
    font-size: 14px;
    color: #fff;
    box-shadow: 0 3px 10px #ccc;
    /* margin-bottom: 10px; */
}

.menu-wrapper {
    height: 44px;
    /* box-shadow: 0 3px 10px #ccc; */
}

.menu {
    padding-top: 10px;
    display: flex;
    align-items: center;
    justify-content: space-around;
    text-align: center;
    height: 44px;
}

.menu-item view {
    height: 22px;
}

.menu-item view text {
    padding: 3px 20px;
    width: 80px;
    line-height: 22px;
    vertical-align: top;
    display: inline-block;
}

.menu-item view:nth-child(1) text {
    color: #bcbcbc;
    font-size: 12px;
}

.menu-item view:nth-child(2) text {
    font-size: 14px;
    font-weight: bold;
}

.menu-item .green {
    color: #b4be8c;
}

.menu-item .red {
    color: #cba68c;
}

.bottom_line_green {
    border-bottom: 2px solid #EB4D45;
}

.bottom_line_red {
    border-bottom: 2px solid #EB4D45;
}

.chart {
    padding: 12px 2px;
}

.canvas {
    width: 100%;
    height: 200px;
}

.scrollview {
    height: calc(100vh - 100px);
    /* padding-top: 10px; */
}

.divider {
    height: 10px;
    background-color: #f0f0f0;
}

.ranking {
    padding: 10px;
}

.ranking-head {
    font-size: 12px;
    color: #888;
    padding-bottom: 10px;
}

progress {
    box-shadow: 3px 3px 3px #ccc;

}

.icon {
    width: 20px;
    height: 20px;
    padding: 6px;
    border-radius: 100%;
    background-color: #EB4D45;
    margin-right: 10px;
    box-shadow: 3px 3px 3px #ccc;

}

.ranking-list-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.ranking-list-top text {
    line-height: 22px;
    display: inline-block;
    height: 32px;
    font-size: 14px;
}

.ranking-list-item {
    padding: 10px 0;
}

.ranking-list-bottom {
    padding: 10px;
}

.head-text {
    position: relative;
}

.arrow::after {
    content: '';
    display: inline-block;
    width: 0;
    height: 0;
    border-top: 6px solid #fff;
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;
    border-bottom: 6px solid transparent;
    position: relative;
    top: 4px;
    left: 4px;
}

.submenu {
    display: flex;
    align-items: center;
    justify-content: space-around;
    font-size: 14px;
    line-height: 20px;
    padding-top: 10px;
}

.submenu-item {
    border-radius: 50px;
    border: 1px solid #eee;
    padding: 4px 10px;
    background: #eee;
}

.submenu-icon {
    width: 20px;
    height: 20px;
    vertical-align: middle;
    margin-right: 10px;
}

.submenu-item-selected {
    background-color: #EB4D45;
    color: #fff;
    border-color: #EB4D45;
}