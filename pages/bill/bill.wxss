.head {
  padding: 60px 0;
  background-color: #eb4d45;
  color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 100px;
  box-shadow: 0 3px 10px #ccc;
  /* margin-bottom: 10px; */
}

.scroll-view {
  height: calc(100vh - 130px);
  padding-top: 10px;
}

.head-item {
  display: flex;
  flex-direction: column;
}

.head-item text {
  line-height: 30px;
  text-align: center;
}

.head-item text:nth-child(1) {
  font-size: 14px;
}

.head-item text:nth-child(2) {
  font-size: 16px;
}

.main-head {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  padding: 10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* background-color: rgb(245, 244, 246); */
}

.icon {
  /* background-color: red; */
  width: 30px;
  height: 30px;
  border-radius: 100%;
  padding: 8px;
  margin-right: 10px;
}

.texts {
  display: flex;
  flex-direction: column;
  font-size: 16px;
}

.texts text:nth-of-type(2) {
  font-size: 12px;
  color: rgb(178, 178, 178);
}

.texts text {
  line-height: 24px;
  color: rgb(120, 120, 120);
}

.main-bi-l {
  display: flex;
  align-items: center;
}

.main-body {
  margin-bottom: 10px;
}

.main-body-item {
  margin: 14px;
  padding: 10px 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 0 10px #ccc;
  border-radius: 10px;
}

.main-body {
}

.green {
  color: #5897f3;
}

.red {
  color: #eb4d45;
}

.bg_green {
  background-color: #5897f3;
}

.bg_red {
  background-color: #eb4d45;
}

.arrow::after{
  content: '';
  display: inline-block;
  width: 0;
  height: 0;
  border-top: 6px solid #fff;
  border-left: 6px solid transparent;
  border-right: 6px solid transparent;
  border-bottom: 6px solid transparent;
  position: relative;
  top: 4px;
  left: 4px;
}